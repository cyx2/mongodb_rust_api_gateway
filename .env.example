# MongoDB connection settings
MONGODB_URI=mongodb://localhost:27017
MONGODB_DEFAULT_DATABASE=app
MONGODB_DEFAULT_COLLECTION=users
MONGODB_POOL_MIN_SIZE=5
MONGODB_POOL_MAX_SIZE=20
MONGODB_CONNECT_TIMEOUT_MS=1000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=3000

# Service observability
LOG_LEVEL=info

# HTTP server binding
APP_BIND_ADDRESS=127.0.0.1:3000

# Testing (optional - defaults to MONGODB_URI if not set)
# MONGODB_TEST_URI=mongodb://localhost:27017
